<h2 class="list-heading">Старые и новые кладбища Петербурга</h2>
<ul id="cemetery-list">
  <% data.cemeteries.each do |cemetery_name| %>
    <% cemetery = data.send(cemetery_name) %>
    <li>
      <%# image_tag cemetery.main_thumb_pic_link, class: "list-entry-pic" %>
      <%= link_to cemetery.name, cemetery.name_url, class: 'cemetery-preview',
        data: {
          turbo_frame: 'entry-content',
          controller: 'cemetery',
          turbo_action: 'advance',
          action: 'click->map#toEntryByEvent',
          'cemetery-id-value': cemetery.id,
          'cemetery-coordinates-value': cemetery.coordinates.polygon,
          'cemetery-coordinates-geo-json-value': cemetery.coordinates.geo_json

         } %>
    </li>
  <% end %>
</ul>
